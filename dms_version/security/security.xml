<odoo>
    <record id="rule_multi_company_version" model="ir.rule">
        <field name="name">Version multi-company</field>
        <field name="model_id" ref="model_dms_version" />
        <field name="global" eval="True" />
        <field
            name="domain_force"
        >['|',('file_id.company_id','=',False),('file_id.company_id','in',company_ids)]</field>
    </record>
    <record id="rule_version_computed_create" model="ir.rule">
        <field name="name">Apply computed create permissions.</field>
        <field name="model_id" ref="model_dms_version" />
        <field name="global" eval="True" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="0" />
        <field name="domain_force">[('permission_create', '=', user.id)]</field>
    </record>
    <record id="rule_version_computed_read" model="ir.rule">
        <field name="name">Apply computed read permissions.</field>
        <field name="model_id" ref="model_dms_version" />
        <field name="global" eval="True" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="0" />
        <field name="domain_force">[('permission_read', '=', user.id)]</field>
    </record>
    <record id="rule_version_computed_unlink" model="ir.rule">
        <field name="name">Apply computed unlink permissions.</field>
        <field name="model_id" ref="model_dms_version" />
        <field name="global" eval="True" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="1" />
        <field name="domain_force">[('permission_unlink', '=', user.id)]</field>
    </record>
    <record id="rule_version_computed_write" model="ir.rule">
        <field name="name">Apply computed write permissions.</field>
        <field name="model_id" ref="model_dms_version" />
        <field name="global" eval="True" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="0" />
        <field name="domain_force">[('permission_write', '=', user.id)]</field>
    </record>
</odoo>
