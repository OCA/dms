<templates xml:space="preserve">

	<t t-name="muk_dms.KanbanFileSidebar">
		<div class="mk_dms_file_sidebar_directories">
			<ul>
	        	<t t-foreach="data.starred" t-as="directory">
	        		<li t-attf-id="directory_#{directory.id}">
	        			<a href="#" 
			        		t-att-data-id="directory.id" 
			        		t-att-data-name="directory.name">
			        		<span class="directory_content"><t t-esc="directory.name" /></span>
		           			<span class="directory_badge directory_badge_square"><t t-esc="directory.count_files" /></span>
			        	</a>
	        		</li>
	           	</t>
       		</ul>
		</div>
	</t>

</templates>