        <field name="name">Portal dms directory (read)</field>
        <field name="model_id" ref="model_dms_directory" />
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="0" />
        <field
            name="domain_force"
        >['|', ('complete_read_group_ids','in',[g.id for g in user.groups_id]), ('record_ref_message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>
