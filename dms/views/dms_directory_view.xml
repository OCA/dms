<odoo>

<record id="search_dms_directory" model="ir.ui.view">
	<field name="name">muk_dms_directory.search</field>
	<field name="model">muk_dms.directory</field>
	<field name="arch" type="xml">
		<search>
			<field name="name" />
			<field name="path" />
			<filter string="Root Directories" domain="[('is_root_directory', '=', True)]"/>
		</search>
	</field>
</record>

<record id="action_dms_directory_files" model="ir.actions.act_window">
    <field name="name">Document Files</field>
    <field name="view_type">form</field>
	<field name="res_model">muk_dms.file</field>
	<field name="view_mode">kanban,tree,form</field>
	<field name="domain">[("directory", "=",  active_id)]</field>
	<field name="context">{'default_directory': active_id,}
    </field>
	<field name="help" type="html">
	    <p class="oe_view_nocontent_create">
	      	Click to add a new file.
	    </p>
	    <p>
			Files are used to save content directly in Odoo.
	    </p>
    </field>
</record>

<record id="action_dms_directory_subdirectories" model="ir.actions.act_window">
    <field name="name">Document Subdirectories</field>
    <field name="view_type">form</field>
	<field name="res_model">muk_dms.directory</field>
	<field name="view_mode">kanban,tree,form</field>
	<field name="domain">[("parent_directory", "=",  active_id)]</field>
	<field name="context">{'default_parent_directory': active_id,}
    </field>
	<field name="help" type="html">
	    <p class="oe_view_nocontent_create">
	      	Click to add a new directory.
	    </p>
	    <p>
			Directories can be used to structure and organize
			files directly in Odoo.
	    </p>
    </field>
</record>

<record id="view_dms_directory_kanban" model="ir.ui.view">
	<field name="name">muk_dms_directory.kanban</field>
	<field name="model">muk_dms.directory</field>
	<field name="arch" type="xml">
		<kanban class="dms_directory_kanban">
			<field name="id" />
			<field name="name" />
			<field name="thumbnail" />
			<field name="count_files" />
			<field name="count_directories" />
			<templates>
				<t t-name="kanban-box">
					<div class="muk_kanban_directory oe_kanban_global_click">
						<img class="muk_thumbnail" t-attf-src="data:image/*;base64,{{record.thumbnail.raw_value}}" />
						<div class="muk_info_panel">
							<div class="muk_name">
								<t name="name" t-esc="record.name.value" />
							</div>
							<div class="muk_info">
								<a class="muk_info_files" 
									name="%(muk_dms.action_dms_directory_files)d" 
									type="action">
									<i class="fa fa-file" aria-hidden="true"></i>
									<span><t name="count_files" t-esc="record.count_files.value" /></span>
								</a>
								<a class="muk_info_directories" 
									name="%(muk_dms.action_dms_directory_subdirectories)d" 
									type="action">
									<i class="fa fa-folder" aria-hidden="true"></i>
									<span><t name="count_directories" t-esc="record.count_directories.value" /></span>
								</a>
							</div>
						</div>
					</div>
				</t>
			</templates>
		</kanban>
	</field>
</record>

<record id="view_dms_directory_tree" model="ir.ui.view">
	<field name="name">muk_dms_directory.tree</field>
	<field name="model">muk_dms.directory</field>
	<field name="arch" type="xml">
		<tree string="Directories">
			<field name="perm_create" invisible="1" />
			<field name="perm_write" invisible="1" />
			<field name="perm_unlink" invisible="1" />
			<field name="name" />
			<field name="size" widget="dms_size" />
			<field name="path" widget="dms_path" />
			<field name="settings" />
		</tree>
	</field>
</record>

<record id="view_dms_directory_form" model="ir.ui.view">
	<field name="name">muk_dms_directory.form</field>
	<field name="model">muk_dms.directory</field>
	<field name="arch" type="xml">
		<form string="Directory">
			<sheet>
				<field name="thumbnail" 
					widget="image" 
					class="oe_avatar oe_read_only" 
					options="{'size': [90, 90]}"/>
				<field name="custom_thumbnail" 
					widget="image" 
					class="oe_avatar oe_edit_only" 
					options="{'size': [90, 90]}"/>
				<div class="oe_title">
					<label for="name" class="oe_edit_only" />
					<h1>
						<field name="name" />
					</h1>
				</div>
 				<group>
 					<field name="relational_path" widget="dms_relpath" />
				</group>
				<group string="Information">
					<group>
						<field name="count_files" />
						<field name="count_directories" />
					</group>
					<group>
						<field name="size" widget="dms_size" />
					</group>
				</group>
				<group string="Settings">
					<group>
						<field name="is_root_directory" />
					</group>
					<group>
						<field name="settings" options="{'quick_create': False}"
							attrs="{'readonly':[('is_root_directory','=',False)],
									'required':[('is_root_directory','=',True)]}"/>
						<field name="parent_directory" widget="dms_directory"
							options="{'quick_create': False}"
							attrs="{'invisible':[('is_root_directory','=',True)],
									'required':[('is_root_directory','=',False)]}"/>
					</group>
				</group>
				<notebook>
 					<page string="Files">
						<field name="files" context="{'default_directory': active_id}"
							attrs="{'readonly':[('perm_create','=',False)]}">
							<tree string="Files">
								<field name="name" />
								<field name="size" widget="dms_size" />
								<field name="write_date" readonly="1" />
							</tree>
						</field>
					</page>
					<page string="Subdirectories">
						<field name="child_directories" context="{'default_parent_directory': active_id}" 
							attrs="{'readonly':[('perm_create','=',False)]}">
							<tree string="Subdirectories">
								<field name="name" />
								<field name="size" widget="dms_size" />
							</tree>
						</field>
					</page>
					<page string="Access Information">
						<group>
							<group>
								<field name="perm_read" readonly="1" />
							</group>
							<group>
								<field name="perm_create" readonly="1" />
								<field name="perm_write" readonly="1" />
								<field name="perm_unlink" readonly="1" />
							</group>
						</group>
					</page>
					<page string="Meta Information" groups="muk_dms.group_dms_admin,base.group_system">
						<group>
							<field name="id" />
						</group>
						<group>
							<group>
								<field name="create_date" readonly="1" />
								<field name="create_uid" readonly="1" />
							</group>
							<group>
								<field name="write_date" readonly="1" />
								<field name="write_uid" readonly="1" />
							</group>
						</group>
					</page>
				</notebook>
			</sheet>
		</form>
	</field>
</record> 

<record id="action_dms_directory" model="ir.actions.act_window">
	<field name="name">Document Directories</field>
	<field name="res_model">muk_dms.directory</field>
    <field name="view_type">form</field>
	<field name="view_mode">kanban,tree,form</field>
	<field name="help" type="html">
	    <p class="oe_view_nocontent_create">
	      	Click to add a new directory.
	    </p>
	    <p>
			Directories can be used to structure and organize
			files directly in Odoo.
	    </p>
    </field>
</record>

<menuitem id="menu_dms_directory" name="Directories"
	parent="cat_menu_muk_dms_models" action="action_dms_directory" />
		
</odoo>
