<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="dms.DocumentTreeViewButtons">
        <div class="o_list_buttons">
            <button accesskey="O" class="dms_open btn btn-sm btn-primary" type="button">
                <i class="fa fa-external-link" />
                <span>Open</span>
            </button>
            <button
                accesskey="C"
                class="dms_create btn btn-sm btn-secondary"
                type="button"
            >
                <i class="fa fa-plus-circle" />
                <span>Create</span>
            </button>
            <button
                accesskey="E"
                class="dms_edit btn btn-sm btn-secondary"
                type="button"
            >
                <i class="fa fa-pencil-square-o" />
                <span>Edit</span>
            </button>
            <button
                accesskey="D"
                class="dms_delete btn btn-sm btn-secondary"
                type="button"
            >
                <i class="fa fa-trash-o" />
                <span>Delete</span>
            </button>
        </div>
    </t>
    <t t-name="dms.DocumentTreeViewActions">
        <span class="btn-group btn-group-sm d-none d-sm-inline-flex">
            <button
                type="button"
                class="dms_action_help fa fa-question btn btn-secondary"
                data-toggle="tooltip"
                data-placement="bottom"
                title="Show Help"
            />
        </span>
        <span class="btn-group btn-group-sm d-none d-sm-inline-flex">
            <button
                type="button"
                class="dms_refresh fa fa-refresh btn btn-secondary"
                data-toggle="tooltip"
                data-placement="bottom"
                title="Refresh"
            />
        </span>
    </t>
</templates>
