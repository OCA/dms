<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_wizard_ir_attachment_dms_file" model="ir.actions.act_window">
        <field name="name">Create Attachment from DMS File</field>
        <field name="res_model">wizard.ir.attachment.dms.file</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
    <record id="view_wizard_ir_attachment_dms_file_form" model="ir.ui.view">
        <field name="name">wizard.ir.attachment.dms.file.form</field>
        <field name="model">wizard.ir.attachment.dms.file</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="dms_file_id" />
                </group>
                <footer>
                    <button
                        name="action_link"
                        string="Add"
                        class="oe_highlight"
                        type="object"
                    />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
